<h1>
  Payment Results
</h1>

<form action="/payment/results">

  <div>

    <label for="user_apr">
      APR
    </label>

    <input id= "user_apr" type="text" name="user_apr" placeholder="E.g. 5.42">

  </div>

  <div>

    <label for="user_term">
      Number of years
    </label>

    <input id= "user_term" type="text" name="user_term" placeholder="How many years to repay the loan?">

  </div>

  <label for="user_principal">
    Principal
  </label>

  <input id= "user_principal" type="text" name="user_principal" placeholder="How much principal?">

  <button>
    Calculate monthly payment
  </button>



</form>
